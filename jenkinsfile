pipeline {
    agent any

    stages {
        stage('Git Checkout') {
            steps {
               git branch: 'main', credentialsId: 'git-token', url: 'https://github.com/kelvinSeamount/Capstone-DotNET-CD.git'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                // Add test steps here
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                // Add deploy steps here
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}