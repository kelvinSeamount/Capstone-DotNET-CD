pipeline {
    agent any
    stages {
        stage('Git Checkout') {
            steps {
               git branch: 'main', credentialsId: 'git-token', url: 'https://github.com/kelvinSeamount/Capstone-DotNET-CD.git'
            }
        }
        
        stage('Deploy To Kubernetes') {
            steps {
                withKubeConfig(caCertificate: '', clusterName: 'mekadevops-cluster', contextName: '', credentialsId: 'k8-token', namespace: 'webapps', restrictKubeConfigAccess: false, serverUrl: 'https://06BB99948A38BB16A22C75E5782AB170.gr7.eu-central-1.eks.amazonaws.com') {
                    sh 'kubectl apply -f Manifest/manifest.yaml -n webapps'
                    sh 'kubectl apply -f Manifest/ci.yaml'
                    sh 'kubectl apply -f Manifest/ingress.yaml'
                    sleep 30
                }
            }
        }
        
        stage('Verify Deployment') {
            steps {
                withKubeConfig(caCertificate: '', clusterName: 'mekadevops-cluster', contextName: '', credentialsId: 'k8-token', namespace: 'webapps', restrictKubeConfigAccess: false, serverUrl: 'https://06BB99948A38BB16A22C75E5782AB170.gr7.eu-central-1.eks.amazonaws.com') {
                    sh 'kubectl get pods -n webapps'
                    sh 'kubectl get svc -n webapps'
                    sh 'kubectl get ingress -n webapps'
                    sleep 30
                }
            }
        }
    }
    post {
        always {
            script {
                def jobName = env.JOB_NAME
                def buildNumber = env.BUILD_NUMBER
                def pipelineStatus = currentBuild.result ?: 'UNKNOWN'
                def bannerColor = pipelineStatus.toUpperCase() == 'SUCCESS' ? 'green' : 'red'
                def body = """
                    <html>
                    <body>
                    <div style="border: 4px solid ${bannerColor}; padding: 10px;">
                    <h2>${jobName} - Build ${buildNumber}</h2>
                    <div style="background-color: ${bannerColor}; padding: 10px;">
                    <h3 style="color: white;">Pipeline Status: ${pipelineStatus.toUpperCase()}</h3>
                    </div>
                    <p>Check the <a href="${BUILD_URL}">console output</a>.</p>
                    </div>
                    </body>
                    </html>
                """
                emailext (
                    subject: "${jobName} - Build ${buildNumber} - ${pipelineStatus.toUpperCase()}",
                    body: body,
                    to: 'nwachukwukelvin89@gmail.com',
                    from: 'jenkins@mekadevops.com',
                    replyTo: 'jenkins@mekadevops.com',
                    mimeType: 'text/html'
                )
            }
        }
    }
}